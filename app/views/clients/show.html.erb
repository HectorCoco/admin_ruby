<div class="pd-10 mg-t-20 bg-info d-lg-flex justify-content-between">
  <div class="d-lg-flex align-items-center" role="tablist">
    <h5 class="tx-white m-2 tx-bold" >Client information</h5>
  </div>
  <div class="d-flex">
    <div>
      <%= link_to clients_path, class:"btn btn-primary" do%>
        <i class="fa fa-reply"></i>
      <% end %>
    </div>
    <div class="btn-group ">
      <button type="button" class="btn btn-purple btn-block mg-b-10 dropdown-toggle tx-bold" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa fa-navicon"></i>
        <span class="tx-white">Actions</span>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <div class="dropdown-item">
          <%= link_to edit_client_path(@client), class:"" do%>
            <i class="fa fa-pencil"></i>
            <span class="tx-bold">Edit this client</span>
          <% end %>
        </div>
        <div class="dropdown-item">
          <%= link_to new_client_phone_path(@client), class:"" do%>
            <span class="tx-bold">Add phone</span>
          <% end %>
        </div>
        <div class="dropdown-item">
          <%= link_to new_client_address_path(@client), class:"" do%>
            <span class="tx-bold">Add address</span>
          <% end %>
        </div>
        <div class="dropdown-divider"></div>
        <div class="dropdown-item">
          <%= button_to @client, method: :delete, class:"btn btn-danger btn-block mg-b-10" do%>
            <i class="icon ion-close"></i>
            <span class="tx-bold">Destroy</span>
          <% end %>
        </div >
      </div>
    </div>
  </div>
</div>
<div id="accordion" class="accordion" role="tablist" aria-multiselectable="true">
  <%=render @client%>
  <%=render "/clients/phones", client: @client%>
  <%=render "/clients/addresses", client:@client%>
  <br>
  <br>
</div>
<div class="pd-10 mg-t-20 bg-info d-lg-flex">
  <div class="d-lg-flex align-items-center" role="tablist">
    <h5 class="tx-white m-2 tx-bold" >Contracts</h5>
  </div>
</div>
<div class="bd rounded table-responsive">
  <table class="table table-bordered mg-b-0">
    <thead>
      <tr>
        <th class="bg-secondary"><span class="tx-white">ID </span></th>
        <th class="bg-secondary"><span class="tx-white">Batches</span></th>
        <th class="bg-secondary"><span class="tx-white">Total Amount</span></th>
        <th class="bg-secondary"><span class="tx-white">Total Payments</span></th>
        <th class="bg-secondary"><span class="tx-white">Down payment</span></th>
        <th class="bg-secondary"><span class="tx-white">Actions</span></th>
      </tr>
    </thead>
    <tbody>
      <%@contracts.each do |contract|%>
        <tr>
          <%=render "contracts_table", contract:contract%>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
