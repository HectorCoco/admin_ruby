<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <%= form.label :first_name, style: "display: block", class:"col-sm-4 form-control-label" do %>
      Nombre <span class="tx-danger">*</span>
    <% end %>
    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
      <%= form.text_field :first_name,class:"form-control"%>
    </div>
  </div>
  <div class="row mg-t-20">
    <%= form.label :middle_name, style: "display: block", class:"col-sm-4 form-control-label" do %>
      Apellido paterno <span class="tx-danger">*</span>
    <% end %>
    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
      <%= form.text_field :middle_name,class:"form-control"%>
    </div>
  </div>
  <div class="row mg-t-20 mb-4">
    <%= form.label :last_name, style: "display: block", class:"col-sm-4 form-control-label" do %>
      Apellido materno <span class="tx-danger">*</span>
    <% end %>
    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
      <%= form.text_field :last_name,class:"form-control"%>
    </div>
  </div>
  <div class="row mg-t-20 mb-4">
    <%= form.label :email, style: "display: block", class:"col-sm-4 form-control-label" do %>
      Correo Electronico <span class="tx-danger">*</span>
    <% end %>
    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
      <%= form.text_field :email ,class:"form-control"%>
    </div>
  </div>
  <div class="d-flex">
    <%= form.label "Estado", style: "display: block", class:"" %>
    <%= form.check_box :status, class:"form-check-input col-lg-8" do%>
    <% end %>
  </div>
  <div class="row mg-t-10 d-flex justify-content-center">
    <div class="form-layout mg-t-30 mt-2">
      <%= form.submit "Confirmar", class:"btn btn-success"%>
    </div>
  </div>
<% end %>
