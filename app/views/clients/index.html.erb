<div class="bd rounded pd-10">
  <h1 class="tx-bold d-flex justify-content-center">CLIENTES</h1>
  <div class="row d-lg-flex justify-content-end m-3 pd-10 rounded">
    <div class="d-flex mr-lg-3">
      <%=render "search"%>
    </div>
    <div class="d-flex align-items-center">
      <%= link_to new_client_path, class:"btn btn-success tx-11 tx-uppercase tx-spacing tx-bold bd d-flex align-items-center pd-15" do%>
        <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>
  <div id="clients" class="bd bd-gray-300 rounded table-responsive">
    <table class="table table-bordered mg-b-0">
      <thead>
        <tr>
          <th class="bg-info"><span class="tx-white">ID</span></th>
          <th class="bg-info"><span class="tx-white">Nombre</span></th>
          <th class="bg-info"><span class="tx-white">Apellido Paterno</span></th>
          <th class="bg-info"><span class="tx-white">Apellido Materno</span></th>
          <th class="bg-info"><span class="tx-white">Estado</span></th>
          <th class="bg-info"><span class="tx-white">Opciones</span></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <%=render "clients/client_index_table", client:client %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div>
    <%=render "layouts/pagy/pagy"%>
  </div>
</div>
