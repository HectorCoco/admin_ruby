<td><%= contract.id%></td>
<td>
  <%=link_to contract.client do%>
    <span><%= "#{contract.client.first_name} #{contract.client.middle_name} #{contract.client.last_name}"%></span>
  <% end %>
</td>
<td>
  <% if contract.batches.empty? %>
    <span class="tx-danger">No batches</span>
  <% else %>
    <span>/</span>
    <%contract.batches.each do |batch|%>
      <%=link_to batch do%>
        <span><%=batch.uuid%></span>
      <% end %>
    <% end %>
  <% end %>
</td>
<td><%=number_to_currency(contract.total_amount)%></td>
<td><%="#{contract.payments.length} de #{contract.total_payments}"%></td>
<td class=""><%=contract.next_payment%></td>
<td class="d-flex align-items-top justify-content-center">
  <%= link_to contract, class:"btn btn-info" do%>
    <i class="fa fa-eye"></i>
    <span class="tx-white tx-bold"></span>
  <% end %>
  <%= link_to edit_contract_path(contract), class:"btn btn-warning" do%>
    <i class="fa fa-pencil"></i>
  <% end %>
  <%= link_to new_with_contract_path(contract.id), class:"btn btn-teal" do%>
    <i class="fa fa-money"></i>
    <span class="tx-white tx-bold">Anadir pago</span>
  <% end %>
</td>
