<td> <%=payment.file_number%> </td>
<td><%= payment.realization_date.nil? ? "No especificado" : payment.realization_date.strftime("%d-%m-%Y")%></td>
<th scope="row"><%=payment.date.strftime("%d-%m-%Y")%></th>
<td class= <%=payment.kind=="Completo"? "tx-success tx-bold" : "tx-warning tx-bold"%> > <%=payment.kind%> </td>
<td> <%=number_to_currency(payment.amount)%> </td>
<td class="d-flex align-items-top justify-content-center">
  <%= link_to payment, class:"btn btn-info" do%>
    <i class="fa fa-eye"></i>
    <span class="tx-white tx-bold"></span>
  <% end %>
  <!--
  <%= link_to edit_payment_path(payment), class:"btn btn-warning" do%>
    <i class="fa fa-pencil"></i>
  <% end %>
  -->
</td>
